<div class="card my-2">
  <div class="card-img-top">
    <div class="text-center">
      <h3 class="card-title pt-2"><i class="fas fa-utensils"></i> <%= @restaurant.name %> <i class="fas fa-utensils"></i></h3>
      <h6 class="card-subtitle mb-2 text-muted"><%= @restaurant.address %></h6>
      <p class="card-text">
        <div>This is an <%= @restaurant.category %> restaurant</div>
        <div>Contact here : <%= @restaurant.phone_number %></div>
      </p>
    </div>
  </div>
  <div class= "card-body">
      <%= render "reviews/form", restaurant: [@restaurant, @review] %>
    </div>
  </div>
</div>
<div class="card">
  <div class="card-body">
    <h5 class="card-title">Reviews</h5>
    <% if @restaurant.reviews.empty? %>
      There is no reviews for this restaurant
    <% else %>
      <% @restaurant.reviews.each do |review| %>
        <div class="card my-1 border-warning">
          <div class="card-body text-warning">
            <p class="card-text font-italic">
              <%= review.content %>
            </p>
            <p class="card-text">
              Rating : <% review.rating.times do %>
                <i class="fas fa-star text-warning"></i>
              <% end %>
              <% unless (5 - review.rating == 0) %>
                <% (5 - review.rating).times do %>
                  <i class="far fa-star text-warning"></i>
                <% end %>
              <% end %>
            </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="card-link">
  <%= link_to "Back to homepage", restaurants_path %>
</div>